{% extends "layouts/base.jinja2" %}

{% block title %}{% if region_description is defined %}: {{region_description}}{% endif %}{% endblock %}

{% block body %}
    <div class="container-fluid header-row">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-2">
                    <span class="fa fa-thumbs-down header-icon"></span>
                </div>
                <div class="col-sm-12 col-md-10">
                    <h1>Who Do I Blame?</h1>
                    <form action="/" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control form-control-lg" value="" name="address" id="address"
                                   placeholder="Where are you?" aria-label="Where are you?">
                            <small>Try to be as specific as possible (9-digit zip code, full street address, etc)</small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% if reps %}
            <div class="col-md col-sm-12">
                <h3>{{region_description}}</h3>
                <hr>
                <div class="row justify-content-sm-center">
                {% for rep in reps %}
                    <div class="col-sm-auto text-center">
                        <h2 class="rep-title">{{ rep.roles[0].short_title }} {{rep.first_name}} {{ rep.last_name }} <span class="badge badge-secondary rep-badge">{{rep.current_party}}</span></h2>
                        <h3 class="rep-role"{{ rep.role }}></h3>
                        <a href="{{rep.url}}"><img src="https://www.govtrack.us/data/photos/{{rep.govtrack_id}}-200px.jpeg" class="border border-secondary"></a>
                        <div class="rep-links">
                            <a href="{{rep.url}}"><span class="fa fa-2x fa-external-link-square rep-link"></span></a>
                            {% if rep.twitter_account %}
                                <a href="https://twitter.com/{{rep.twitter_account}}"><span class="fa fa-2x fa-twitter-square rep-link"></span></a>
                            {% endif %}
                            {% if rep.facebook_account %}
                                <a href="http://facebook.com/{{rep.facebook_account}}"><span class="fa fa-2x fa-facebook-square rep-link"></span></a>
                            {% endif %}
                            {% if rep.youtube_account %}
                                <a href="http://youtube.com/{{rep.youtube_account}}"><span class="fa fa-2x fa-youtube-square rep-link"></span></a>
                            {% endif %}

                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
